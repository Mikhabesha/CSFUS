@model CSFUF.Models.ContributionExpert

@{
    ViewBag.Title = "CreateExpert";
}

<h2>የመዋጮ ባለሞያ መመዝገቢያ</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>የመዋጮ ባለሞያ</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.ConExpName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ConExpName, new { @class = "form-control", @required = "required"})
                @Html.ValidationMessageFor(model => model.ConExpName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("ወደ ዝርዝር ተመለስ", "Index")
</div>
