@model  List<CSFUF.Models.CustomerReg>
@{

    var grid = new WebGrid(canPage: true, rowsPerPage: 10);
    grid.Bind(source: Model, rowCount: ViewBag.TotalRow, autoSortAndPage: false);
 }
@*@{
    Layout = "~/Views/Shared/_RegistrationLayout.cshtml";
}*@


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Listed View</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <div class="container">
        <h2>Customer List</h2>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a href="#" class="navbar-brand">Search</a>
                </div>
                <div class="collapse navbar-collapse">
                    @using (Html.BeginForm("NewView", "Customer", FormMethod.Get, new { @class = "navbar-form navbar-left" }))
                    {
                        <div class="form-group">
                            <input type="text" name="search" value="@ViewBag.search" class="form-control" placeholder="search" />
                        </div>
                        <button type="submit" value="Search" class="btn btn-success">Search</button>
                    }
                </div>
            </div>
        </nav>
        <div>

            @grid.Table(
                tableStyle: "table table-responsive table-bordered",
                columns: grid.Columns(
                    grid.Column(columnName: "FullName", header: "FullName"),
                    grid.Column(columnName: "OrgName", header: "Organization Name"),
                    grid.Column(columnName: "ArchiveNo", header: "Archive No"),
                    grid.Column(columnName: "OrgTIN", header: "Org. TIN"),
                    grid.Column(columnName: "PhoneNo", header: "Phone No"),
                    grid.Column(columnName: "PrivateIDNo", header: "Private ID.No"),
                    grid.Column(columnName: "MotherName", header: "Mother Name"),
                    grid.Column(columnName: "DateRecieved", header: "Date Recieved "),
                    grid.Column(columnName: "DateTransfered", header: "Date Transfered "),
                    grid.Column(columnName: "DocStatus", header: "Doc Status ")
                    ) 
            )
@*@foreach (var item in Model)
{ 
    @Html.ActionLink("Details", "Details", new { id = item.Id }) 
    @Html.ActionLink("Send To", "SendTo", new { id = item.Id })
 
}*@
            <div class="row">
                <div class="col-sm-6">
                    @grid.PagerList(mode: WebGridPagerModes.All)

                </div>
            </div>

            @Html.Hidden("dir", grid.SortDirection)
            @Html.Hidden("col", grid.SortColumn)

        </div>
    </div>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        $(function () {
            try {
                var dir = $('#dir').val();
                var col = $('#col').val();
                var header = $("th a[href*=" + col + "]");
                if (dir == "Ascending") {
                    header.text(header.text() + "  ▲")
                }
                if (dir == "Descending") {
                    header.text(header.text() + "  ▼");
                }

            } catch (e) {

            }
        })
    </script>

    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
