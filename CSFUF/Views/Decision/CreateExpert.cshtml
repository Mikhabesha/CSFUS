@model CSFUF.Models.WusaneExpert

@{
    ViewBag.Title = "CreateExpert";
}

<h2>አዲስ የዉሳኔ ባለሙያ መመዝገቢያ</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>የዉሳኔ ባለሙያ</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.ExpertName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ExpertName, new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(model => model.ExpertName)
            </div>
             @Html.LabelFor(model => model.Region, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Region, new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(model => model.Region)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="መዝግብ" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("ወደ ዝርዝር ይመለሱ", "Index")
</div>
