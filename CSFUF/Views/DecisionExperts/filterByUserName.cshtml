@model IEnumerable<CSFUF.Models.DecisionExpertsTask>

@{
    ViewBag.Title = "filterByUserName";
}

<div class="texts"><h3 class="ttext">የዉሳኔ ባለሞያ ገጽ</h3></div>
@using (Html.BeginForm("filterByUserName", "DecisionExperts", FormMethod.Get))
{
<div class="rectangle">
    <h5>የጡረተኛ መ/ቁ ያስገቡ ፡</h5>
    @Html.TextBox("ExpNameToSearch", null, "--መ.ቁ ያስገቡ--", htmlAttributes: new { @class = "form-control" })
    <label class="alert-danger">@ViewBag.Message</label> <br />
    <input type="submit" value="ይፈልጉ" class="btn btn-success btn-sm" /><br/>
    @Html.ActionLink("Refresh🔄", "filterByUserName", "DecisionExperts")
</div>
}
<style>
    .rectangle:hover {
        background-color: #bebbbb;
        border-color: #ccc;
        border: 1px solid deepskyblue;
        box-shadow: 5px 5px 10px #002395;
    }

    .rectangle2:hover {
        background-color: #bebbbb;
        border-color: #ccc;
        border: 1px solid deepskyblue;
        box-shadow: 5px 5px 10px #002395;
    }
    .rectangle {
        width: 25%;
        float: left;
       
        padding: 30px;
        margin-bottom: 15px;
        margin-right: 15px;
        margin-top: 15px;
        border-radius: 10px;
        background-color: lightgray;
        box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.4);
    }
    
    .form {
        margin-top: 5px;
        margin-bottom: 5px;
    }
</style>
@using (Html.BeginForm("filterByUserName", "DecisionExperts", FormMethod.Post))
{
<div class="rectangle2">
    <h5>ወይም በቀን ፡ </h5>
    <span>ከ ዕለት : </span><input type="date" class="form form-control" name="Start" required="required" />
    <span>እስከ ዕለት : </span><input type="date" class="form form-control" name="End" required="required" />
    <input type="submit" value="መረጃውን ይፈልጉ" class="btn btn-success btn-sm" />
    <label class="alert-danger">@ViewBag.Message2</label>
</div>
    <style>
        .ttext {
            border-radius: 5px;
            background-color: #23297a;
            width: 15%;
            box-shadow: 5px 5px 10px #23297a;
        }

        .texts {
            color: whitesmoke;
        }

        .table td {
            color: #025db2;
        }

        .table th {
            color: #023767;
        }

        .table {
            width: 150%;
            float: right;
            clear: left;
            margin-left: 15px;
        }

        .rectangle2 {
            width: 25%;
            float: inline-start;
           
            padding: 3px;
            margin-bottom: 15px;
            margin-right: 15px;
            margin-top: 15px;
            border-radius: 5px;
            background-color: lightgray;
            box-shadow: 5px 5px 10px #23297a;
        }

        .form {
            margin-top: 5px;
            margin-bottom: 5px;
        }
    </style>
    <br />
    <table class="table table-bordered table-hover table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrgName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.PrivateIDNo)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.DateRecieved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTransfered)
            </th>
   
            <th>
                @Html.DisplayNameFor(model => model.DocStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignedExpert)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrgName)
                </td>
                
              
                <td>
                    @Html.DisplayFor(modelItem => item.PrivateIDNo)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.DateRecieved)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTransfered)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.DocStatus)
                    @*@if (item.DateTransfered != null)
                    {
                        (item.DocStatus == "Sent To Approver");
                    }*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssignedExpert)
                </td>
                <td>

                    @if(item.DateTransfered == null)
                    {
                        @Html.ActionLink("አስተካክል", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-sm" })
                    }
                    |
                    @Html.ActionLink("መግለጫ", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" }) |
                </td>
            </tr>
        }

    </table >
}
<style>
    .table-hover tr:hover {
        background-color: #eee;
        animation: highlight 0.2s ease-in-out;
    }

    .table td {
        color: #025db2;
    }

    .table th {
        color: #023767;
        border-radius: 5px;
    }

   </style>
