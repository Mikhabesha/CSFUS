@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
}

<div class="section-padding">
    <h2>Available Roles</h2>
    <br />  <br />
    <section class="col-sm-6">
        <table class="table-bordered">
            @Html.ActionLink("Create Role", "Create", "Role", new { @class = "btn btn-primary btn-sm btn-block" });
        </table>
    </section>
    <a class="btn btn-success" @Html.ActionLink(" Assign Role", "RegisterRole", "Account") </a>

