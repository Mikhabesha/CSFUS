<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -CSFU-POESSA</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    @Html.ActionLink("POESSA", "Index", "Home", null, new { @class = "navbar-brand" })
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            ምዝገባ (Registration) |
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <button class="dropdown-item btn btn-light" type="button">
                                @Html.ActionLink("ምዝገባ ክፍል", "IndexForBTeamLeader", "Customer", null, new { @class = "" })
                            </button>
                            <br />
                            <button class="dropdown-item btn btn-light" type="button">
                                @Html.ActionLink("ማህደር መከታተያ", "IndexForBT", "SearchDates", null, new { @class = "" })
                            </button>
                        </div>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            መዋጮ (Contribution) |
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <button class="dropdown-item btn btn-light" type="button">
                                @Html.ActionLink("መዋጮ አከፋፋይ  ", "IndexForBT", "Contribution", null, new { @class = "" })
                            </button> 
                        </div>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            ዉሳኔ (Wusane) |
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <button class="dropdown-item btn btn-light" type="button">
                                @Html.ActionLink("ዉሳኔ ክፍል አከፋፋይ ", "IndexForBT", "Decision", null, new { @class = "" })
                            </button>
                            <br />
                            <button class="dropdown-item btn btn-light" type="button">
                                @Html.ActionLink("አፕሮቨር መመደቢያ", "Distro2ForBT", "DecisionDistro", null, new { @class = "" })
                            </button>
                            <br />
                            <button class="dropdown-item btn btn-light" type="button">
                                @Html.ActionLink("አፕሩቨር ", "TeBeApprovedListsForBT", "Approver", null, new { @class = "" })
                            </button>
                            @*<br />
                            <button class="dropdown-item btn btn-light" type="button">
                                @Html.ActionLink("ክፍያ ክፍል ", "IndexForBT", "Payment", null, new { @class = "" })
                            </button>*@
                        </div>
                    </li>

                    <li>@Html.ActionLink("የደንበኛ መከታተያ", "Index", "CustomerTracker", null, new { @class = "navbar-brand" })</li>
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

            <div class="container body-content col-md">
                @Html.Partial("_Notifications")
                @RenderBody()
                <hr />
                <footer>
                    <div class="col-lg-10">
                        <p>&copy; @DateTime.Now.Year -Customer Service Follow Up System-POESSA</p>
                    </div>
                </footer>
            </div>
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
</body>
</html>
